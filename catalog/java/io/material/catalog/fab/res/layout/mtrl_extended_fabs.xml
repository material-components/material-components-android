<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_gravity="center_vertical"
  android:padding="8dp"
  android:clipToPadding="false"
  android:columnCount="2"
  android:rowCount="3">

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="24dp"
    android:layout_gravity="start|center"
    android:paddingTop="32dp"
    android:paddingBottom="32dp"
    android:labelFor="@id/fab_with_icon_and_text"
    android:text="@string/extended_fab_with_text" />

  <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
    android:id="@+id/fab_with_icon_and_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_gravity="center"
    android:contentDescription="@string/cat_extended_fab_content_desc"
    android:text="@string/extended_fab_label"
    app:icon="@drawable/ic_add_24px" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="start|center"
    android:labelFor="@id/fab_with_text"
    android:text="@string/extended_fab_without_icon" />
  <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
    android:id="@+id/fab_with_text"
    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_marginLeft="32dp"
    android:layout_marginRight="32dp"
    android:layout_gravity="center"
    android:contentDescription="@string/cat_extended_fab_content_desc"
    android:text="@string/extended_fab_label" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="start|center"
    android:labelFor="@id/fab_with_icon"
    android:text="@string/extended_fab_without_text" />
  <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
    android:id="@+id/fab_with_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_gravity="center"
    android:contentDescription="@string/cat_extended_fab_content_desc"
    app:icon="@drawable/ic_add_24px" />

</GridLayout>
