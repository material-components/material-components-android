<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingTop="@dimen/keyline_5"
  android:paddingBottom="@dimen/keyline_5"
  android:paddingStart="@dimen/keyline_4"
  android:paddingEnd="@dimen/keyline_4">

    <io.material.materialthemebuilder.widget.LabelLinkView
      android:id="@+id/label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/keyline_4"
      android:text="@string/label_color_scheme_title"
      app:leadingIcon="@drawable/ic_colorize_24dp"
      app:linkUrl="https://material.io/design/color/the-color-system.html" />

    <io.material.materialthemebuilder.widget.ColorAttributeView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="\?colorPrimary"
      app:colorFillColor="?colorPrimary"
      app:colorStrokeColor="?colorOnBackground"
      android:layout_marginTop="@dimen/keyline_2"
      android:layout_marginBottom="@dimen/keyline_2" />

    <io.material.materialthemebuilder.widget.ColorAttributeView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="\?colorPrimaryVariant"
      app:colorFillColor="?colorPrimaryVariant"
      app:colorStrokeColor="?colorOnBackground"
      android:layout_marginTop="@dimen/keyline_2"
      android:layout_marginBottom="@dimen/keyline_2" />

    <io.material.materialthemebuilder.widget.ColorAttributeView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="\?colorSecondary"
      app:colorFillColor="?colorSecondary"
      app:colorStrokeColor="?colorOnBackground"
      android:layout_marginTop="@dimen/keyline_2"
      android:layout_marginBottom="@dimen/keyline_2" />


    <io.material.materialthemebuilder.widget.ColorAttributeView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="\?colorSecondaryVariant"
      app:colorFillColor="?colorSecondaryVariant"
      app:colorStrokeColor="?colorOnBackground"
      android:layout_marginTop="@dimen/keyline_2"
      android:layout_marginBottom="@dimen/keyline_2" />


    <io.material.materialthemebuilder.widget.ColorAttributeView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="\?colorBackground"
      app:colorFillColor="?android:colorBackground"
      app:colorStrokeColor="?colorOnBackground"
      android:layout_marginTop="@dimen/keyline_2"
      android:layout_marginBottom="@dimen/keyline_2" />

    <io.material.materialthemebuilder.widget.ColorAttributeView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="\?colorSurface"
      app:colorFillColor="?colorSurface"
      app:colorStrokeColor="?colorOnBackground"
      android:layout_marginTop="@dimen/keyline_2"
      android:layout_marginBottom="@dimen/keyline_2" />

    <io.material.materialthemebuilder.widget.ColorAttributeView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="\?colorError"
      app:colorFillColor="?colorError"
      app:colorStrokeColor="?colorOnBackground"
      android:layout_marginTop="@dimen/keyline_2"
      android:layout_marginBottom="@dimen/keyline_2" />

    <io.material.materialthemebuilder.widget.ColorAttributeView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="\?colorOnPrimary"
      app:colorFillColor="?colorOnPrimary"
      app:colorStrokeColor="?colorOnBackground"
      android:layout_marginTop="@dimen/keyline_2"
      android:layout_marginBottom="@dimen/keyline_2" />

    <io.material.materialthemebuilder.widget.ColorAttributeView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="\?colorOnSecondary"
      app:colorFillColor="?colorOnSecondary"
      app:colorStrokeColor="?colorOnBackground"
      android:layout_marginTop="@dimen/keyline_2"
      android:layout_marginBottom="@dimen/keyline_2" />

    <io.material.materialthemebuilder.widget.ColorAttributeView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="\?colorOnBackground"
      app:colorFillColor="?colorOnBackground"
      app:colorStrokeColor="?colorOnBackground"
      android:layout_marginTop="@dimen/keyline_2"
      android:layout_marginBottom="@dimen/keyline_2" />

    <io.material.materialthemebuilder.widget.ColorAttributeView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="\?colorOnSurface"
      app:colorFillColor="?colorOnSurface"
      app:colorStrokeColor="?colorOnBackground"
      android:layout_marginTop="@dimen/keyline_2"
      android:layout_marginBottom="@dimen/keyline_2" />

    <io.material.materialthemebuilder.widget.ColorAttributeView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="\?colorOnError"
      app:colorFillColor="?colorOnError"
      app:colorStrokeColor="?colorOnBackground"
      android:layout_marginTop="@dimen/keyline_2"
      android:layout_marginBottom="@dimen/keyline_2" />

</LinearLayout>
