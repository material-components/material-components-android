<resources>
  <!-- Dimensions for low ripple overlays, used on top of surface. -->

  <item name="mtrl_low_ripple_pressed_alpha" format="float" type="dimen">0.12</item>
  <!-- RippleDrawable uses 60% of the focused alpha for API 28+. -->
  <item name="mtrl_low_ripple_focused_alpha" format="float" type="dimen">0.20</item>
  <!-- RippleDrawable uses 20% of the hovered alpha for API 28+. -->
  <item name="mtrl_low_ripple_hovered_alpha" format="float" type="dimen">0.20</item>
  <item name="mtrl_low_ripple_default_alpha" format="float" type="dimen">0.12</item>

  <!-- Dimensions for high ripple overlays, used on top of primary / secondary. -->

  <item name="mtrl_high_ripple_pressed_alpha" format="float" type="dimen">0.24</item>
  <!-- RippleDrawable uses 60% of the focused alpha for API 28+. -->
  <item name="mtrl_high_ripple_focused_alpha" format="float" type="dimen">0.40</item>
  <!-- RippleDrawable uses 20% of the hovered alpha for API 28+. -->
  <item name="mtrl_high_ripple_hovered_alpha" format="float" type="dimen">0.40</item>
  <item name="mtrl_high_ripple_default_alpha" format="float" type="dimen">0.24</item>
</resources>
