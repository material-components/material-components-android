<resources>
  <!-- Style for ListItemLayout. -->
  <style name="Widget.Material3.ListItemLayout" parent="">
    <item name="enforceMaterialTheme">true</item>
    <item name="materialThemeOverlay">@style/ThemeOverlay.Material3.ListItemLayout</item>
  </style>

  <!-- Style for segmented ListItemLayout. -->
  <style name="Widget.Material3.ListItemLayout.Segmented">
    <item name="materialThemeOverlay">@style/ThemeOverlay.Material3.ListItemLayout.Segmented</item>
  </style>

  <style name="ThemeOverlay.Material3.ListItemLayout" parent="">
    <item name="materialCardViewStyle">@style/Widget.Material3.CardView.ListItemLayout</item>
  </style>

  <style name="ThemeOverlay.Material3.ListItemLayout.Segmented">
    <item name="materialCardViewStyle">@style/Widget.Material3.CardView.ListItemLayout.Segmented</item>
  </style>

  <style name="Widget.Material3.CardView.ListItemLayout" parent="Widget.Material3.CardView.Filled">
    <item name="android:minHeight">52dp</item>
    <item name="cardElevation">0dp</item>
    <item name="checkedIcon">@null</item>
    <item name="cardForegroundColor">@null</item>
    <item name="cardBackgroundColor">@color/m3_list_item_background_color_selector</item>
    <item name="shapeAppearance">@xml/m3_list_item_shape_state_list</item>
    <item name="cardCornerRadius">@null</item>
    <item name="android:duplicateParentState">true</item>
  </style>

  <style name="Widget.Material3.CardView.ListItemLayout.Segmented">
    <item name="cardBackgroundColor">@color/m3_segmented_list_item_background_color_selector</item>
  </style>

  <style name="ShapeAppearance.Material3.ListItem.First" parent="">
    <item name="cornerFamily">?attr/shapeCornerFamily</item>
    <item name="cornerSizeTopLeft">?attr/shapeCornerSizeLarge</item>
    <item name="cornerSizeTopRight">?attr/shapeCornerSizeLarge</item>
    <item name="cornerSizeBottomLeft">?attr/shapeCornerSizeExtraSmall</item>
    <item name="cornerSizeBottomRight">?attr/shapeCornerSizeExtraSmall</item>
  </style>

  <style name="ShapeAppearance.Material3.ListItem.Middle" parent="">
    <item name="cornerFamily">?attr/shapeCornerFamily</item>
    <item name="cornerSize">?attr/shapeCornerSizeExtraSmall</item>
  </style>

  <style name="ShapeAppearance.Material3.ListItem.Last" parent="">
    <item name="cornerFamily">?attr/shapeCornerFamily</item>
    <item name="cornerSizeTopLeft">?attr/shapeCornerSizeExtraSmall</item>
    <item name="cornerSizeTopRight">?attr/shapeCornerSizeExtraSmall</item>
    <item name="cornerSizeBottomLeft">?attr/shapeCornerSizeLarge</item>
    <item name="cornerSizeBottomRight">?attr/shapeCornerSizeLarge</item>
  </style>

  <style name="ShapeAppearance.Material3.ListItem.Single" parent="">
    <item name="cornerFamily">?attr/shapeCornerFamily</item>
    <item name="cornerSize">?attr/shapeCornerSizeLarge</item>
  </style>

  <style name="ShapeAppearance.Material3.ListItem.Checked" parent="">
    <item name="cornerFamily">?attr/shapeCornerFamily</item>
    <item name="cornerSize">?attr/shapeCornerSizeLarge</item>
  </style>

  <!-- Styles for List item content. -->
  <style name="Widget.Material3.ImageView.ListItem.Leading" parent="">
    <item name="tint">@color/m3_list_item_leading_icon_color_selector</item>
  </style>

</resources>
