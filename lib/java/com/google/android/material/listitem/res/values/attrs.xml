<resources>
  <!-- Style to use for ListItemLayouts. -->
  <attr name="listItemLayoutStyle" format="reference"/>
  <!-- Style to use for ListItemCardView. -->
  <attr name="listItemCardViewStyle" format="reference"/>
  <!-- Style to use for segmented ListItemCardView. -->
  <attr name="listItemCardViewSegmentedStyle" format="reference"/>
  <!-- Style to use for the ListitemRevealLayout -->
  <attr name="listItemRevealLayoutStyle" format="reference"/>

  <declare-styleable name="ListItemCardView">
    <!-- Whether or not to enable swiping, if a sibling RevealableListItem exists. -->
    <attr name="swipeEnabled" format="boolean"/>
  </declare-styleable>

  <declare-styleable name="ListItemCardViewStates">
    <!-- State when a ListItemCardView is being swiped. -->
    <attr name="state_swiped" format="boolean" />
  </declare-styleable>

  <declare-styleable name="ListItemRevealLayout">
    <!-- Minimum width any children are measured as. -->
    <attr name="minChildWidth" format="dimension" />
    <!-- Defines the behavior when swiping to reveal the primary action of the ListItemRevealLayout. -->
    <attr name="primaryActionSwipeMode">
      <!-- The primary action is disabled. -->
      <enum name="disabled" value="0"/>
      <!-- Swiping reveals intermediary states before fully revealing the primary action. -->
      <enum name="indirect" value="1"/>
      <!-- Swiping directly reveals the primary action without stopping at intermediary states. -->
      <enum name="direct" value="2"/>
    </attr>
  </declare-styleable>

  <!-- Shape appearance of a single item in the list. -->
  <attr name="listItemShapeAppearanceSingle" format="reference"/>
  <!-- Shape appearance of the first item in the list. -->
  <attr name="listItemShapeAppearanceFirst" format="reference"/>
  <!-- Shape appearance of middle item in the list. -->
  <attr name="listItemShapeAppearanceMiddle" format="reference"/>
  <!-- Shape appearance of the last item in the list. -->
  <attr name="listItemShapeAppearanceLast" format="reference"/>
  <!-- Shape appearance of a checked item in the list. -->
  <attr name="listItemShapeAppearanceChecked" format="reference"/>

</resources>
