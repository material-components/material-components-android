<resources>
  <!-- Style to use for MaterialDivider in the theme. -->
  <attr name="materialDividerStyle" type="reference"/>

  <!-- Style to use for the heavy variation of the MaterialDivider in the theme. -->
  <attr name="materialDividerHeavyStyle" type="reference"/>

  <attr name="dividerInsetStart" format="dimension"/>
  <attr name="dividerInsetEnd" format="dimension"/>

  <declare-styleable name="MaterialDivider">
    <!-- Color of the divider. -->
    <attr name="dividerColor" format="color|reference"/>
    <!-- Thickness of the divider. -->
    <attr name="dividerThickness" format="dimension"/>
    <!-- Start indent of the divider. -->
    <attr name="dividerInsetEnd"/>
    <!-- End indent of the divider. -->
    <attr name="dividerInsetStart"/>
    <!-- Whether the MaterialDividerItemDecoration class should draw a divider
         after the last item of the recycler view. True by default. -->
    <attr name="lastItemDecorated" format="boolean"/>
  </declare-styleable>
</resources>
