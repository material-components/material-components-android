<resources>

  <style name="Widget.Design.TextInputLayout" parent="android:Widget">
    <item name="boxBackgroundMode">none</item>
    <item name="hintTextAppearance">@style/TextAppearance.Design.Hint</item>
    <item name="helperTextTextAppearance">@style/TextAppearance.Design.HelperText</item>
    <item name="errorTextAppearance">@style/TextAppearance.Design.Error</item>
    <item name="counterTextAppearance">@style/TextAppearance.Design.Counter</item>
    <item name="counterOverflowTextAppearance">@style/TextAppearance.Design.Counter.Overflow</item>
    <item name="passwordToggleDrawable">@drawable/design_password_eye</item>
    <item name="passwordToggleTint">@color/design_tint_password_toggle</item>
    <item name="passwordToggleContentDescription">@string/password_toggle_content_description</item>
  </style>

  <!-- Base style for TextInputLayout. You should use one of the sub-styles instead. -->
  <style name="Base.Widget.MaterialComponents.TextInputLayout" parent="Widget.Design.TextInputLayout">
    <item name="boxBackgroundMode">outline</item>
    <item name="boxBackgroundColor">@null</item>
    <item name="boxCornerRadiusTopLeft">@dimen/mtrl_textinput_box_corner_radius_medium</item>
    <item name="boxCornerRadiusTopRight">@dimen/mtrl_textinput_box_corner_radius_medium</item>
    <item name="boxCornerRadiusBottomRight">@dimen/mtrl_textinput_box_corner_radius_medium</item>
    <item name="boxCornerRadiusBottomLeft">@dimen/mtrl_textinput_box_corner_radius_medium</item>
    <item name="boxStrokeColor">?attr/colorControlActivated</item>
    <item name="boxPaddingLeft">@dimen/mtrl_textinput_box_padding_left</item>
    <item name="boxPaddingRight">@dimen/mtrl_textinput_box_padding_right</item>
    <item name="boxCollapsedPaddingTop">
      @dimen/mtrl_textinput_outline_box_collapsed_padding_top
    </item>
    <item name="boxCollapsedPaddingBottom">
      @dimen/mtrl_textinput_outline_box_collapsed_padding_bottom
    </item>
    <item name="boxExpandedPaddingTop">@dimen/mtrl_textinput_outline_box_expanded_padding</item>
    <item name="boxExpandedPaddingBottom">@dimen/mtrl_textinput_outline_box_expanded_padding</item>
  </style>

  <style name="Widget.MaterialComponents.TextInputLayout.FilledBox" parent="Base.Widget.MaterialComponents.TextInputLayout">
    <item name="boxBackgroundMode">filled</item>
    <item name="boxBackgroundColor">@color/mtrl_textinput_filled_box_default_background_color</item>
    <item name="boxCornerRadiusBottomLeft">@dimen/mtrl_textinput_box_corner_radius_small</item>
    <item name="boxCornerRadiusBottomRight">@dimen/mtrl_textinput_box_corner_radius_small</item>
    <item name="boxCollapsedPaddingTop">@dimen/mtrl_textinput_filled_box_collapsed_padding</item>
    <item name="boxCollapsedPaddingBottom">@dimen/mtrl_textinput_box_padding_bottom</item>
    <item name="boxExpandedPaddingTop">@dimen/mtrl_textinput_filled_box_expanded_padding</item>
    <item name="boxExpandedPaddingBottom">@dimen/mtrl_textinput_outline_box_expanded_padding</item>
  </style>

  <style name="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
    <item name="boxCollapsedPaddingTop">
      @dimen/mtrl_textinput_filled_box_collapsed_padding_dense
    </item>
    <item name="boxCollapsedPaddingBottom">
      @dimen/mtrl_textinput_filled_box_collapsed_padding_dense
    </item>
    <item name="boxExpandedPaddingTop">
      @dimen/mtrl_textinput_filled_box_expanded_padding_dense
    </item>
    <item name="boxExpandedPaddingBottom">
      @dimen/mtrl_textinput_filled_box_expanded_padding_dense
    </item>
  </style>

  <style name="Widget.MaterialComponents.TextInputLayout.OutlineBox" parent="Base.Widget.MaterialComponents.TextInputLayout"/>

  <style name="Widget.MaterialComponents.TextInputLayout.OutlineBox.Dense">
    <item name="boxCollapsedPaddingBottom">
      @dimen/mtrl_textinput_outline_box_collapsed_padding_dense
    </item>
    <item name="boxExpandedPaddingTop">
      @dimen/mtrl_textinput_outline_box_expanded_padding_dense
    </item>
    <item name="boxExpandedPaddingBottom">
      @dimen/mtrl_textinput_outline_box_expanded_padding_dense
    </item>
  </style>

  <style name="TextAppearance.Design.HelperText" parent="TextAppearance.AppCompat.Caption"/>

  <style name="TextAppearance.Design.Hint" parent="TextAppearance.AppCompat.Caption">
    <item name="android:textColor">?attr/colorControlActivated</item>
  </style>

  <style name="TextAppearance.Design.Error" parent="TextAppearance.AppCompat.Caption">
    <item name="android:textColor">@color/design_error</item>
  </style>

  <style name="TextAppearance.Design.Counter" parent="TextAppearance.AppCompat.Caption"/>

  <style name="TextAppearance.Design.Counter.Overflow" parent="TextAppearance.AppCompat.Caption">
    <item name="android:textColor">@color/design_error</item>
  </style>

</resources>
